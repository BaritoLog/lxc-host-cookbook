config:
  core.https_address: <%= @lxd_bind_address %>:8443
cluster:
  enabled: true
  server_name: <%= @server_name %>
  server_address: <%= @lxd_bind_address %>
  cluster_address: <%= @lxd_cluster_address %>:8443
  cluster_certificate: <%= @lxd_cluster_certificate %>
  cluster_password: <%= @lxd_cluster_password %>
networks:
- name: <%= @network_bridge_name %>
  type: bridge
  managed: true
  config:
    bridge.mode: fan
    bridge.mtu: "1400"
    fan.underlay_subnet: <%= @underlay_subnet%>
    fan.overlay_subnet: <%= @overlay_subnet %>
    raw.dnsmasq: port=0
storage_pools:
<% if @storage_pool_source %>
- config:
    source: <%= @storage_pool_source %>
<% else %>
- config: {}
<% end %>
  name: <%= @storage_pool_name %>
  driver: <%= @storage_pool_driver %>
profiles:
- config:
    user.network-config: |
      version: 1
      config:
        - type: physical
          name: eth0
          subnets:
            - type: dhcp
              control: auto
    user.user-data: |
      #cloud-config
      package_upgrade: true
      ssh_authorized_keys:
       - <%= @ssh_authorized_key %>
  description: ""
  devices:
    eth0:
      name: eth0
      nictype: bridged
      parent: <%= @network_bridge_name %>
      type: nic
    root:
      path: /
      pool: <%= @storage_pool_name %>
      type: disk
  name: default
